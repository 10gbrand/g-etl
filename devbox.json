{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "go-task@latest",
    "tree@latest",
    "claude-code@latest",
    "uv@latest",
    "kitty@latest",
    "superfile@latest",
    "nerdfonts@latest",
    "gh@latest",
    "graphviz@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ],
      "download-binary": [
        "ARCH=${1:-linux-arm64}",
        "VERSION=${2:-latest}",
        "if [ \"$VERSION\" = \"latest\" ]; then",
        "  URL=\"https://github.com/10gbrand/g-etl/releases/latest/download/g_etl-${ARCH}.tar.gz\"",
        "else",
        "  URL=\"https://github.com/10gbrand/g-etl/releases/download/${VERSION}/g_etl-${ARCH}.tar.gz\"",
        "fi",
        "echo \"Laddar ner från: $URL\"",
        "curl -fsSL \"$URL\" -o g_etl.tar.gz",
        "tar -xzf g_etl.tar.gz",
        "rm g_etl.tar.gz",
        "chmod +x g_etl",
        "echo \"Klart! Kör med: ./g_etl\""
      ]
    }
  }
}
